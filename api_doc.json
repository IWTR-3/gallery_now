{
  "openapi": "3.0.0",
  "info": {
    "title": "아르코미술관전시",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://api.kcisa.kr"
    }
  ],
  "paths": {
    "/openapi/service/rest/meta4/getARKA1202": {
      "get": {
        "summary": "요청메시지",
        "operationId": "요청메시지_Get",
        "parameters": [
          {
            "name": "serviceKey",
            "in": "query",
            "description": "서비스키(활용신청 후 사용)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "numOfRows",
            "in": "query",
            "description": "세션당 요청레코드수",
            "required": false,
            "schema": {
              "type": "string",
              "default": "10"
            }
          },
          {
            "name": "pageNo",
            "in": "query",
            "description": "페이지수",
            "required": false,
            "schema": {
              "type": "string",
              "default": "1"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/response"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "response": {
        "required": ["body", "header"],
        "type": "object",
        "properties": {
          "header": {
            "required": ["resultCode", "resultMsg"],
            "type": "object",
            "properties": {
              "resultCode": {
                "type": "string",
                "description": "결과코드"
              },
              "resultMsg": {
                "type": "string",
                "description": "결과메시지"
              }
            }
          },
          "body": {
            "required": ["items", "numOfRows", "pageNo", "totalCount"],
            "type": "object",
            "properties": {
              "items": {
                "required": ["item"],
                "type": "object",
                "properties": {
                  "item": {
                    "type": "array",
                    "items": {
                      "required": [
                        "alternativeTitle",
                        "collectionDb",
                        "contributor",
                        "copyrightOthers",
                        "creator",
                        "description",
                        "extent",
                        "language",
                        "person",
                        "referenceIdentifier",
                        "regDate",
                        "rights",
                        "sourceTitle",
                        "spatial",
                        "subjectCategory",
                        "subjectKeyword",
                        "temporalCoverage",
                        "title",
                        "url"
                      ],
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string",
                          "description": "자원의 명칭"
                        },
                        "alternativeTitle": {
                          "type": "string",
                          "description": "대체 (기존 = alternativeTitle(대체) + ' ' + subTitle(부제))"
                        },
                        "creator": {
                          "type": "string",
                          "description": "주된 책임을 진 개체"
                        },
                        "regDate": {
                          "type": "string",
                          "description": "등록일"
                        },
                        "collectionDb": {
                          "type": "string",
                          "description": "소속(통제)DB"
                        },
                        "subjectCategory": {
                          "type": "string",
                          "description": "기관별주제분류체계"
                        },
                        "subjectKeyword": {
                          "type": "string",
                          "description": "핵심주제어(키워드)"
                        },
                        "extent": {
                          "type": "string",
                          "description": "자원의 크기나 재생시간"
                        },
                        "description": {
                          "type": "string",
                          "description": "내용 (기존 = description(내용) + ' ' + abstract(자원의 대한 요약))"
                        },
                        "spatial": {
                          "type": "string",
                          "description": "공간"
                        },
                        "temporalCoverage": {
                          "type": "string",
                          "description": "해당시간대 (기존 = temporal(시간적범위) + ' ' + coverage(내용의범위(지명/시대 등)))"
                        },
                        "person": {
                          "type": "string",
                          "description": "사람"
                        },
                        "language": {
                          "type": "string",
                          "description": "언어"
                        },
                        "sourceTitle": {
                          "type": "string",
                          "description": "참조자원제목 (기존 = reference(참조한자원) + ' ' + source(유래자원에 대한 참조))"
                        },
                        "referenceIdentifier": {
                          "type": "string",
                          "description": "참조식별정보(썸네일이미지)"
                        },
                        "rights": {
                          "type": "string",
                          "description": "자원에 대한 권리"
                        },
                        "copyrightOthers": {
                          "type": "string",
                          "description": "저작권"
                        },
                        "url": {
                          "type": "string",
                          "description": "지식정보자원위치정보"
                        },
                        "contributor": {
                          "type": "string",
                          "description": "기여자"
                        }
                      }
                    }
                  }
                }
              },
              "numOfRows": {
                "type": "string",
                "description": "데이터수",
                "default": "10"
              },
              "pageNo": {
                "type": "string",
                "description": "페이지번호",
                "default": "1"
              },
              "totalCount": {
                "type": "string",
                "description": "전체데이터수"
              }
            }
          }
        }
      }
    }
  }
}
